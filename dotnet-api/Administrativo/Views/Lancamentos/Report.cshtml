@model Administrativo.Models.RelatotioDiario

@{
    ViewData["Title"] = "Report";
}

<h1>Relatório diário</h1>


<div>
    <h3>Selecione o dia de referência</h3>
    <form asp-action="Report">
        <div class="form-group col-sm-4">
            <label asp-for="DiaReferencia" class="control-label"></label>
            <input asp-for="DiaReferencia" class="form-control" />
            <span asp-validation-for="DiaReferencia" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="Report" class="btn btn-primary" />
        </div>
    </form>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ValEntrada)
        </dt> 
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ValEntrada)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ValSaida)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ValSaida)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Saldo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Saldo)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DiaReferencia)
        </dt>
        <dt class="col-sm-10">
            @Html.DisplayFor(model => model.DiaReferencia)
        </dt>
    </dl>
    <a asp-action="Index">Back to List</a>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Lancamento.DesLancamento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Lancamento.IndEntradaSaida)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Lancamento.ValLancamento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Lancamento.DtaLancamento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Lancamento.DtaCreateAt)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Lancamento.DtaUpdatedAt)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Lancamentos)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.DesLancamento)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IndEntradaSaida)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ValLancamento)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DtaLancamento)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DtaCreateAt)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DtaUpdatedAt)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>


</div>